// SHIFT TALLY 
// pypath: 
extends ../base.html

- var kde = ['my-2','w-4/5','md:w-4/7','border','border-indigo-300','rounded']


block content 
    h1 Shift Tallies
    h3 #{emp.name}

    .div(class=tablePanel)
        table.w-fc
            tr.h-10
                th.font-bold Scored At
                th.font-bold Shifts
                th.font-bold Count
            each tally in tallies
                tr.h-12
                    td.text-lg #{tally.priority}
                    td.text-md #{tally.shifts}
                    td.text-lg #{tally.count}

    #kdeplot.kde(class=kde
        hx-get='kdeplot/' 
        hx-target='#kdeplot' 
        hx-swap='innerHTML'
        hx-trigger='load'
    )



    