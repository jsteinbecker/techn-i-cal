extends 'base.html'



mixin card(title, descr, link, bkgd_img)

   div(class="w-full md:w-1/3 mt-4")
      a(href=link)
         div(class="relative border-orange-300 border overflow-hidden rounded")
            img(class="object-cover rounded brightness-50 transition-all transform-gpu hover:scale-110 hover:brightness-90" 
               src="#{bkgd_img}" 
               alt=title)
            div(class="absolute top-0 left-0 px-6 py-4")
               h4(class="mb-3 text-3xl font-semibold tracking-tight text-white")= title
            div(class="absolute bottom-0 left-0 px-6 py-4")
               p(class="leading-normal mt-0 -translate-top-5 jbm text-zinc-300 text-shadow p-3")= descr

block content

   div.mx-2.flex.flex-col.gap-5(class="md:flex-row")
      
      +card('Schedules', 'View and manage your schedules', '/schedule',          '/static/img/schedules-1.png')
      +card('Employees', 'View and manage your employees', '/sch/employees/all', '/static/img/employees.png')
      +card('Shifts',    'View and manage your shifts',    '/sch/shifts/all/',   '/static/img/shifts-1.png')