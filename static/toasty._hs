behavior Toast
    init 
        set timeRemaining to 30
        then transition *opacity to 1 over 1s
        repeat forever 
            decrement timeRemaining
            wait 1s
            if timeRemaining == 0 then
                trigger destroy 
                end
            end
        end
    on mouseover set timeRemaining to 4
        end
    on destroy 
        remove me 
        end
    end
    