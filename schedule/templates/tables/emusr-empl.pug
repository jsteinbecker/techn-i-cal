
h3.text-lg.bg-zinc-200.text-black #{emp.name} Unfavorables 

table  
    th 
        td Date
        td Shift 
        td Actions 
    tbody 
        if slots
            each unf in slots
                tr 
                    td #{unf.workday.date}
                    td #{unf.shift}
                    td 
                        a(href='/schedule/emusr-page/#{emp.slug}/#{unf.slug}') View
                        a(href='/schedule/emusr-page/#{emp.slug}/#{unf.slug}/delete') 
                            i.fa-duotone.fa-trashcan(class="m-1 text-gray-500 hover:text-red-500")

  